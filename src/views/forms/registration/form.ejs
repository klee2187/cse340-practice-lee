<%- include('../../partials/header') %>
<main>
    <h1><%= title %></h1>
    <p>
        Register for a new account by providing your information below.
        All fields are required and passwords must meet securtity requirements.
    </p>
    <form method="POST" action="/register" class="registration-form">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" minlength="2" required placeholder="Full name (e.g. John Doe)">
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required placeholder="example@example.com">
        </div>

        <div class="form-group">
            <label for="emailConfirm">Confirm Email:</label>
            <input type="email" id="emailConfirm" name="emailConfirm" required placeholder="Must match email exactly">
             <div class="help-text">Must match email exactly</div>
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" minlength="8" required pattern="(?=.*[0-9])(?=.*[!@#$%^&*]).*">
            <div class="help-text">Password must contain at least 8 characters with a number and spacial character</div>
        </div>

        <div class="form-group">
            <label for="passwordConfirm">Confirm Password:</label>
            <input type="password" id="passwordConfirm" name="passwordConfirm" minlength="8" required pattern="(?=.*[0-9])(?=.*[!@#$%^&*]).*">
            <div class="help-text">Must match password exactly</div>
        </div>

        <button type="submit">Create Account</button>
    </form>
</main>
<%- include('../../partials/footer') %>